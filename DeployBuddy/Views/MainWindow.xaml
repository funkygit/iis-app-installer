<Window x:Class="DeployBuddy.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DeployBuddy.Views"
        xmlns:vm="clr-namespace:DeployBuddy.ViewModels"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel />
    </Window.DataContext>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0 0 0 10">
            <Button Content="Load Config" Command="{Binding LoadConfigCommand}" Margin="0 0 10 0"/>
            <Button Content="Deploy All" Command="{Binding DeployCommand}" />
        </StackPanel>

        <DataGrid Grid.Row="1" ItemsSource="{Binding Services}" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding Name}" />
                <DataGridTextColumn Header="Port" Binding="{Binding Port}" />
                <DataGridTextColumn Header="Path" Binding="{Binding Path}" />
                <DataGridTextColumn Header="Connection String" Binding="{Binding ConnectionString}" />
                <DataGridTextColumn Header="API Endpoint" Binding="{Binding ApiEndpoint}" />
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock Grid.Row="2" Text="Logs will appear in the logs folder." FontStyle="Italic" />
    </Grid>
</Window>
