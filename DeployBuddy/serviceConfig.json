{
  "services": [
    {
      "name": "UserService",
      "port": 5001,
      "path": "C:\\inetpub\\UserService",
      "connectionString": "Server=...;Database=UserDb;",
      "apiEndpoint": "http://localhost:{port}/api"
    },
    {
      "name": "OrderService",
      "port": 5002,
      "path": "C:\\inetpub\\OrderService",
      "connectionString": "Server=...;Database=OrderDb;",
      "apiEndpoint": "http://localhost:{port}/api",
      "configuration": [
        {
          "file": "appsettings.json",
          "variables": [
            {
              "name": "GatewayPort",
              "value": "{Gateway.Port}"
            },
            {
              "name": "UserServiceUrl",
              "value": "http://localhost:{UserService.Port}/api"
            }
          ]
        }
      ]
    }
  ]
}
